<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% postsList.forEach((post) => { %>
  <h1><%= post.postTitle %></h1>
  <% if (post.postBody.length > 100) { %>
    <p><%= post.postBody.substring(0, 100) + "..." %><a href="/posts/<%= post._id %>">Read More</a></p>
  <% } else { %>
    <p><%= post.postBody %><a href="/posts/<%= post._id %>">Read More</a></p>
  <% } %>
<% }); %>


<%- include("partials/footer"); -%>
